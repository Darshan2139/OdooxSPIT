<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Delivery Form View -->
    <record id="view_stockmaster_delivery_form" model="ir.ui.view">
        <field name="name">stockmaster.delivery.form</field>
        <field name="model">stockmaster.delivery</field>
        <field name="arch" type="xml">
            <form string="Delivery Order">
                <header>
                    <button name="action_pick" string="Pick" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_pack" string="Pack" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'picking')]}"/>
                    <button name="action_ready" string="Mark Ready" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'packing')]}"/>
                    <button name="action_validate" string="Validate" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'ready')]}"/>
                    <button name="action_cancel" string="Cancel" type="object" attrs="{'invisible': [('state', 'in', ['done', 'canceled'])]}"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" attrs="{'invisible': [('state', 'not in', ['picking', 'packing', 'canceled'])]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,picking,packing,ready,done"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="date"/>
                            <field name="customer_id" options="{'no_create': True}"/>
                            <field name="user_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="warehouse_id" options="{'no_create': True}"/>
                            <field name="location_id" domain="[('usage', '=', 'internal')]"/>
                            <field name="total_products" readonly="1"/>
                            <field name="total_quantity" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Products" name="products">
                            <field name="delivery_line_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="product_id" options="{'no_create': True}"/>
                                    <field name="quantity"/>
                                    <field name="uom_id" readonly="1"/>
                                    <field name="picked_qty"/>
                                    <field name="packed_qty"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Add any notes about this delivery..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Delivery List View -->
    <record id="view_stockmaster_delivery_tree" model="ir.ui.view">
        <field name="name">stockmaster.delivery.tree</field>
        <field name="model">stockmaster.delivery</field>
        <field name="arch" type="xml">
            <tree string="Deliveries" decoration-info="state == 'draft'" decoration-warning="state in ['picking', 'packing', 'ready']" decoration-success="state == 'done'" decoration-muted="state == 'canceled'">
                <field name="name"/>
                <field name="date"/>
                <field name="customer_id"/>
                <field name="warehouse_id"/>
                <field name="total_products"/>
                <field name="total_quantity"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state in ['picking', 'packing', 'ready']" decoration-success="state == 'done'"/>
                <field name="user_id"/>
            </tree>
        </field>
    </record>

    <!-- Delivery Kanban View -->
    <record id="view_stockmaster_delivery_kanban" model="ir.ui.view">
        <field name="name">stockmaster.delivery.kanban</field>
        <field name="model">stockmaster.delivery</field>
        <field name="arch" type="xml">
            <kanban default_order="date desc" class="o_kanban_dashboard">
                <field name="name"/>
                <field name="state"/>
                <field name="customer_id"/>
                <field name="total_quantity"/>
                <field name="date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="state" widget="statusbar" statusbar_visible="draft,picking,packing,ready,done"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div><field name="customer_id"/></div>
                                    <div>Total: <field name="total_quantity"/> units</div>
                                    <div><field name="date"/></div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Delivery Search View -->
    <record id="view_stockmaster_delivery_search" model="ir.ui.view">
        <field name="name">stockmaster.delivery.search</field>
        <field name="model">stockmaster.delivery</field>
        <field name="arch" type="xml">
            <search string="Search Deliveries">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="warehouse_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Picking" name="picking" domain="[('state', '=', 'picking')]"/>
                <filter string="Packing" name="packing" domain="[('state', '=', 'packing')]"/>
                <filter string="Ready" name="ready" domain="[('state', '=', 'ready')]"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                <filter string="Pending" name="pending" domain="[('state', 'in', ['draft', 'picking', 'packing', 'ready'])]"/>
                <separator/>
                <filter string="Today" name="today" domain="[('date', '>=', datetime.datetime.now().replace(hour=0, minute=0, second=0))]"/>
                <filter string="This Week" name="this_week" domain="[('date', '>=', (datetime.datetime.now() - datetime.timedelta(days=7)))]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Warehouse" name="group_warehouse" context="{'group_by': 'warehouse_id'}"/>
                    <filter string="Customer" name="group_customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Delivery Action -->
    <record id="action_stockmaster_delivery" model="ir.actions.act_window">
        <field name="name">Delivery Orders</field>
        <field name="res_model">stockmaster.delivery</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_stockmaster_delivery_search"/>
        <field name="context">{'search_default_pending': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first delivery order!
            </p>
            <p>
                Delivery orders are used to record outgoing stock to customers.
            </p>
        </field>
    </record>
</odoo>

