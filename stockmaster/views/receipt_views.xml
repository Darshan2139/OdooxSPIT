<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Receipt Form View -->
    <record id="view_stockmaster_receipt_form" model="ir.ui.view">
        <field name="name">stockmaster.receipt.form</field>
        <field name="model">stockmaster.receipt</field>
        <field name="arch" type="xml">
            <form string="Receipt">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_ready" string="Mark Ready" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'waiting')]}"/>
                    <button name="action_validate" string="Validate" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'ready')]}"/>
                    <button name="action_cancel" string="Cancel" type="object" attrs="{'invisible': [('state', 'in', ['done', 'canceled'])]}"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" attrs="{'invisible': [('state', 'not in', ['waiting', 'canceled'])]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,waiting,ready,done"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="date"/>
                            <field name="supplier_id" options="{'no_create': True}"/>
                            <field name="user_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="warehouse_id" options="{'no_create': True}"/>
                            <field name="location_id" domain="[('usage', '=', 'internal')]"/>
                            <field name="total_products" readonly="1"/>
                            <field name="total_quantity" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Products" name="products">
                            <field name="receipt_line_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="product_id" options="{'no_create': True}"/>
                                    <field name="quantity"/>
                                    <field name="uom_id" readonly="1"/>
                                    <field name="received_qty"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Add any notes about this receipt..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Receipt List View -->
    <record id="view_stockmaster_receipt_tree" model="ir.ui.view">
        <field name="name">stockmaster.receipt.tree</field>
        <field name="model">stockmaster.receipt</field>
        <field name="arch" type="xml">
            <tree string="Receipts" decoration-info="state == 'draft'" decoration-warning="state in ['waiting', 'ready']" decoration-success="state == 'done'" decoration-muted="state == 'canceled'">
                <field name="name"/>
                <field name="date"/>
                <field name="supplier_id"/>
                <field name="warehouse_id"/>
                <field name="total_products"/>
                <field name="total_quantity"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state in ['waiting', 'ready']" decoration-success="state == 'done'"/>
                <field name="user_id"/>
            </tree>
        </field>
    </record>

    <!-- Receipt Kanban View -->
    <record id="view_stockmaster_receipt_kanban" model="ir.ui.view">
        <field name="name">stockmaster.receipt.kanban</field>
        <field name="model">stockmaster.receipt</field>
        <field name="arch" type="xml">
            <kanban default_order="date desc" class="o_kanban_dashboard">
                <field name="name"/>
                <field name="state"/>
                <field name="supplier_id"/>
                <field name="total_quantity"/>
                <field name="date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="state" widget="statusbar" statusbar_visible="draft,waiting,ready,done"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div><field name="supplier_id"/></div>
                                    <div>Total: <field name="total_quantity"/> units</div>
                                    <div><field name="date"/></div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Receipt Search View -->
    <record id="view_stockmaster_receipt_search" model="ir.ui.view">
        <field name="name">stockmaster.receipt.search</field>
        <field name="model">stockmaster.receipt</field>
        <field name="arch" type="xml">
            <search string="Search Receipts">
                <field name="name"/>
                <field name="supplier_id"/>
                <field name="warehouse_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Waiting" name="waiting" domain="[('state', '=', 'waiting')]"/>
                <filter string="Ready" name="ready" domain="[('state', '=', 'ready')]"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                <filter string="Pending" name="pending" domain="[('state', 'in', ['draft', 'waiting', 'ready'])]"/>
                <separator/>
                <filter string="Today" name="today" domain="[('date', '>=', datetime.datetime.now().replace(hour=0, minute=0, second=0))]"/>
                <filter string="This Week" name="this_week" domain="[('date', '>=', (datetime.datetime.now() - datetime.timedelta(days=7)))]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Warehouse" name="group_warehouse" context="{'group_by': 'warehouse_id'}"/>
                    <filter string="Supplier" name="group_supplier" context="{'group_by': 'supplier_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Receipt Action -->
    <record id="action_stockmaster_receipt" model="ir.actions.act_window">
        <field name="name">Receipts</field>
        <field name="res_model">stockmaster.receipt</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_stockmaster_receipt_search"/>
        <field name="context">{'search_default_pending': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first receipt!
            </p>
            <p>
                Receipts are used to record incoming stock from suppliers.
            </p>
        </field>
    </record>
</odoo>

