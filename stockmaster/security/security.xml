<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Security Groups -->
        <record id="group_inventory_manager" model="res.groups">
            <field name="name">Inventory Manager</field>
            <field name="category_id" ref="base.module_category_operations"/>
            <field name="comment">Full access to all inventory operations and settings</field>
        </record>

        <record id="group_warehouse_staff" model="res.groups">
            <field name="name">Warehouse Staff</field>
            <field name="category_id" ref="base.module_category_operations"/>
            <field name="comment">Limited access to perform operations (receipts, deliveries, transfers)</field>
        </record>

        <!-- Record Rules -->
        <record id="stockmaster_receipt_warehouse_rule" model="ir.rule">
            <field name="name">Receipt: Multi-warehouse Access</field>
            <field name="model_id" ref="model_stockmaster_receipt"/>
            <field name="domain_force">['|', ('warehouse_id', 'in', user.warehouse_ids.ids), ('warehouse_id', '=', False)]</field>
            <field name="groups" eval="[(4, ref('group_warehouse_staff'))]"/>
        </record>

        <record id="stockmaster_delivery_warehouse_rule" model="ir.rule">
            <field name="name">Delivery: Multi-warehouse Access</field>
            <field name="model_id" ref="model_stockmaster_delivery"/>
            <field name="domain_force">['|', ('warehouse_id', 'in', user.warehouse_ids.ids), ('warehouse_id', '=', False)]</field>
            <field name="groups" eval="[(4, ref('group_warehouse_staff'))]"/>
        </record>

        <record id="stockmaster_transfer_warehouse_rule" model="ir.rule">
            <field name="name">Transfer: Multi-warehouse Access</field>
            <field name="model_id" ref="model_stockmaster_transfer"/>
            <field name="domain_force">['|', ('source_location_id.warehouse_id', 'in', user.warehouse_ids.ids), ('source_location_id.warehouse_id', '=', False)]</field>
            <field name="groups" eval="[(4, ref('group_warehouse_staff'))]"/>
        </record>
    </data>
</odoo>

